<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/equipe_domicile_tv"
        android:textStyle="bold"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:textSize="16dp"
        android:text="Equipe Domicile"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/score_domicile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:textStyle="bold"
        android:text="0" />

    <TextView
        android:id="@+id/tiret_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:text="-"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/score_exterieur_tv"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text=" 0"
        />


    <TextView
        android:id="@+id/equipe_exterieure_tv"
        android:layout_width="125dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:text="Equipe Exterieur" />

</LinearLayout>